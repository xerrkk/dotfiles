# For conky editing help and commands visit = Casey's Conky Reference with Examples {http://www.ifxgroup.net/conky.htm}

# set to yes if you want Conky to be forked in the background
background yes

short_units yes

own_window yes
own_window_type override
own_window_transparent no
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour 191724

cpu_avg_samples 2
net_avg_samples 2

out_to_console no

# X font when Xft is disabled
font 8x12

# Use Xft?
use_xft yes

# Xft font when Xft is enabled
xftfont DejaVu Sans:bold:size=9

# Text alpha when using Xft
xftalpha 1.0

# Update interval in seconds
update_interval 1

# Use double buffering (reduces flicker)
double_buffer yes

# Minimum size of text area
minimum_size 55
maximum_width 180

# Draw shades/outlines/borders
draw_shades no
draw_outline no
draw_borders no
stippled_borders 0
border_width 2

# Default colors
default_color bbbbbb
default_shade_color white
default_outline_color white

# Custom Colors
color4 e0def4
color8 bbbbbb
color9 9ccfd8

# Text alignment
alignment top_right

# Gap between borders of screen and text
gap_x 20
gap_y 40

# Add spaces to keep things from moving about?
use_spacer right

# Subtract file system buffers from used memory?
no_buffers yes

# if_up_strictness link:  up | link | address
if_up_strictness address

# set to yes if you want all text to be in uppercase
uppercase no

TEXT
${alignc}${execi 3600 grep -w "NAME" /etc/os-release | cut -d'=' -f2 | tr -d '"'} user....
${alignc}${color8}${font DejaVu Sans:size=12}${time %H:%M} ${font} ${color}
${alignc}${time %a %d %b}
${alignc}Uptime: $uptime
${alignc}${execi 600 disp=${DISPLAY#:}; disp=${disp%.[0-9]}; cat $HOME/.desktop-session/desktop-code.$disp 2>/dev/null}
Resolution:${alignr}${execi 3600 xdpyinfo | sed -n -r "s/^\s*dimensions:.*\s([0-9]+x[0-9]+).*/\1/p"}
DPI:${alignr}${execi 3600 sed -nr "s/^\s*Xft.dpi:\s*([0-9]+(x[0-9]+)?).*/\1/p" $HOME/.Xresources | grep "[0-9]" || echo 96}
CPU:${alignr}${cpu}%
Freq:${alignr}${freq_g}GHz
${color}Init:${alignr}${execi 3600 ps -p 1 -o comm= | sed 's/init/SysVinit/'}
${alignr}${cpugraph cpu0 30,170 bbbfff bbbfff}
Disk:${alignr}${diskio}
${alignr}${diskiograph 30,170 bbbfff bbbfff}${if_up eth0}
eth0 up: $alignr ${upspeed eth0}
${alignr}${upspeedgraph   eth0 30,170 bbbfff bbbfff}
eth0 down: $alignr ${downspeed eth0}
${alignr}${downspeedgraph eth0 30,170  bbbfff bbbfff}${endif}${if_up eth1}
eth1 up: $alignr ${upspeed eth1}
${alignr}${upspeedgraph   eth1 30,170 bbbfff bbbfff}
eth1 down: $alignr ${downspeed eth1}
${alignr}${downspeedgraph eth1 30,170  bbbfff bbbfff}${endif}${if_up vmbr0}
Wireless Up: $alignr ${upspeed vmbr0}
${alignr}${upspeedgraph   vmbr0 30,170 bbbfff bbbfff}
Wireless Down: $alignr ${downspeed vmbr0}
${alignr}${downspeedgraph vmbr0 30,170 bbbfff bbbfff}${endif}${if_up wlan0}
wlan0 up: $alignr ${upspeed wlan0}
${alignr} ${upspeedgraph   wlan0 30,170 bbbfff bbbfff}
wlan0 down: $alignr ${downspeed wlan0}
${alignr}${downspeedgraph wlan0 30,170 bbbfff bbbfff}${endif}
${alignr}${color8}Used / Total ${color}
Memory:${alignr}$mem / $memmax
Swap:${alignr}$swap / $swapmax
Disk:${alignr}$fs_used / ${fs_size /}
